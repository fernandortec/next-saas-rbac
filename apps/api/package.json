{
	"name": "@saas/api",
	"version": "1.0.0",
	"private": true,
	"main": "./src/index.ts",
	"type": "module",
	"scripts": {
		"dev": "bun env:load bun --watch src/http/server.ts",
		"db:migrate": "bun env:load prisma migrate dev",
		"db:studio": "bun env:load prisma studio",
		"seed": "bun ./prisma/seed.ts",
		"start": "NODE_ENV=production bun src/http/server.ts",

		"env:load": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@saas/env": "workspace:*",
		"@elysiajs/cors": "^1.0.2",
		"@faker-js/faker": "^8.4.1",
		"@prisma/client": "5.13.0",
		"@saas/auth": "workspace:*",
		"elysia": "^1.0.15",
		"@elysiajs/jwt": "^1.0.2",
		"@elysiajs/swagger": "^1.0.4",
		"bcrypt-ts": "^5.0.2"
	},
	"devDependencies": {
		"@saas/tsconfig": "workspace:*",
		"@types/bun": "latest",
		"dotenv-cli": "^7.4.1",
		"prisma": "^5.13.0"
	}
}
